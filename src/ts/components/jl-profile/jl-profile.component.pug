// Sidebar not visible on print
bs5-sidebar#left-sidebar.px-4.d-print-none.bg-dark.text-light.d-flex.flex-column.justify-content-start.align-items-center.overflow-y-auto(container-selector='#main-container' position='left' rv-bs5-co-xs-auto-hide='true' rv-bs5-co-xl-auto-hide='false' rv-bs5-co-xs-auto-show='false' rv-bs5-co-xl-auto-show='true' rv-bs5-co-xs-mode="'overlap'" rv-bs5-co-xl-mode="'side'" width="260px" rv-parent)
  jl-avatar
  jl-about.my-3
  jl-contact.my-3
  jl-skills.my-3

jl-navbar.fixed-top.position-print-static

#main-container
  // Header only visible on print
  .bg-dark.text-light.d-none.d-print-block
    .container
      .row
        .col-12.col-md-6.d-flex.justify-content-start.align-items-center
          jl-avatar.my-3
        .col-12.col-md-6 
          jl-contact.my-3
      .row
        .col-12.col-md-6
          jl-about.my-3
        .col-12.col-md-6 
          jl-skills.my-3
  .container-fluid
    .row.mt-5
      // Expertise
      section.col-12.mb-4
        jl-timeline.px-4(rv-parent)
          ul.timeline
            li.timeline-title.mb-4
              h2.font-pixel-12x2 Expertise
              .timeline-icon.text-light.bg-dark
                bs5-icon(rv-co-src="$parent.iconLight" size="24")
            li.timeline-item.mb-4
              p(rv-html="$parent.skills.html")
      // Projects
      section.col-12.mb-4
        jl-timeline.px-4(rv-co-items="projects", rv-parent)
          ul.timeline
            li.timeline-title.mb-4
              h2.font-pixel-12x2.fw-bold Projekterfahrung
              .timeline-icon.text-light.bg-dark
                bs5-icon(rv-co-src="$parent.iconCode" size="24")
            li.timeline-item.mb-4(rv-each-item="items")
              div.d-flex.justify-content-between
                h3.font-pixel-8x2 { item.name }
                p.font-pixel-8x2.mb-2.text-end { getTimeRange | call item.start item.end }
              p { item.desc }
      // Education
      section.col-12.mb-4
        jl-timeline.px-4(rv-co-items="educations", rv-parent)
          ul.timeline
            li.timeline-title.mb-4
              h2.font-pixel-12x2.fw-bold Ausbildung
              .timeline-icon.text-light.bg-dark
                bs5-icon(rv-co-src="$parent.iconBookOpen" size="24")
            li.timeline-item.mb-4(rv-each-item="items")
              div.d-flex.justify-content-between
                h3.font-pixel-8x2 { item.name }
                p.font-pixel-8x2.mb-2.text-end { getTimeRange | call item.start item.end }
              p { item.school }